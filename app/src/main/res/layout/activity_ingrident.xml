<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ninah.cooking_app.IngridentActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/IngrAct_saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="Zutat speichern"
        tools:layout_editor_absoluteY="7dp"
        tools:layout_editor_absoluteX="232dp" />

    <ListView
        android:id="@+id/IngrAct_listView"
        android:layout_width="0dp"
        android:layout_height="208dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        tools:layout_editor_absoluteY="303dp"
        tools:layout_editor_absoluteX="7dp" />

    <EditText
        android:id="@+id/IngrAct_einheitEditText"
        android:layout_width="146dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Einheit"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteY="81dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/IngrAct_mengeEditText"
        android:layout_width="154dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="Menge"
        android:inputType="numberPassword"
        tools:layout_editor_absoluteY="72dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/IngrAct_nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Zutat"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
