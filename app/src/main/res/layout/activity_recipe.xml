<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">


    <ListView
        android:id="@+id/ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/workstepText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ingredients"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/recipeName"
                android:visibility="visible"
                android:layout_alignParentTop="true" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/title"
                android:layout_marginTop="11dp"
                android:layout_toLeftOf="@+id/reStAc_rateRecipeButton"
                android:layout_toStartOf="@+id/reStAc_rateRecipeButton"
                android:numStars="5"
                android:clickable="false"/>

            <Button
                android:id="@+id/reStAc_rateRecipeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="@string/rating" />


            <TextView
                android:id="@+id/servings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:layout_marginTop="16dp"
                android:text="@string/servings" />

            <TextView
                android:id="@+id/numberOfServings"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:text=""
                android:layout_below="@+id/ratingBar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/numberOfServings"
                android:layout_toLeftOf="@+id/minus"
                android:layout_toStartOf="@+id/minus"
                android:text="@string/plusButton"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/plus"
                android:text="@string/minusButton" />

            <Button
                android:id="@+id/ready_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timerStart"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/act_recipe_numberOfServings"
                android:layout_toEndOf="@+id/act_recipe_numberOfServings" />

            <EditText
                android:id="@+id/act_recipe_numberOfServings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:text="Name"
                android:layout_alignBottom="@+id/reStAc_rateRecipeButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



        </RelativeLayout>

    </ScrollView>



</RelativeLayout>